<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/big_pro_image_size"
            android:layout_height="@dimen/big_pro_image_size"
            android:id="@+id/disc_recent_storyPic"
            android:src="@drawable/sunnat"
            android:padding="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/darker_gray"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="@string/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disc_recent_full_name"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxEms="5"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/disc_recent_storyPic"
            app:layout_constraintEnd_toEndOf="@+id/disc_recent_storyPic"
            app:layout_constraintStart_toStartOf="@+id/disc_recent_storyPic"/>

</android.support.constraint.ConstraintLayout>